<!-- views/applications/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= productvariant.attributeName %></title>

      <!-- Custom fonts for this template-->
      <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
      <link
          href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
  
      <!-- Custom styles for this template-->
      <link href="/css/sb-admin-2.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="h-100 d-flex align-items-center justify-content-center">
      <div class="card" style="width: 18rem;">    
        <div class="card-body">
          <h5 class="card-title"><%= productvariant.attributeName %></h5>
          <a class="btn btn-primary" href="/productvariants/<%= productvariant._id %>/edit">
            Edit this product variant
          </a>
          <p></p>
          <form action="/productvariants/<%= productvariant._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger" type="submit">Delete this product variant</button>
          </form>
        </div>
      </div>
      <!-- Bootstrap core JavaScript-->
      <script src="/vendor/jquery/jquery.min.js"></script>
      <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  
      <!-- Core plugin JavaScript-->
      <script src=/vendor/jquery-easing/jquery.easing.min.js"></script>
  
      <!-- Custom scripts for all pages-->
      <script src="/js/sb-admin-2.min.js"></script>
    </div>
  </body>
</html>
